# Crypto Trading Agent - Paper Trading Configuration
# This is set up for SIMULATION_MODE (no real money, no real API keys needed)

# =============================================================================
# REQUIRED: API Keys
# =============================================================================

# Exchange selection (binance or kraken)
EXCHANGE=binance

# Binance API (not needed for paper trading, but set placeholder)
BINANCE_API_KEY=demo_key
BINANCE_API_SECRET=demo_secret

# Anthropic API (optional - falls back to rule-based strategy if missing)
# Get from: https://console.anthropic.com
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# =============================================================================
# PAPER TRADING MODE
# =============================================================================

# Paper trading (simulation mode - uses mock exchange, no real money)
SIMULATION_MODE=true

# Stage: stage2 (Enhanced with PostgreSQL + Auth)
STAGE=stage2

# Risk profile: "aggressive" for more trades, "standard" for conservative
# Aggressive: min_confidence 50%, max_position 35%, max_exposure 95%
RISK_PROFILE=aggressive

# Enable adaptive risk based on portfolio size
# Micro (<$500): very aggressive, Small ($500-$2K): aggressive
ENABLE_ADAPTIVE_RISK=true

# Enable decision caching (caches decisions to reduce API costs)
# Works with in-memory cache in Stage 1, Redis in Stage 2+
ENABLE_DECISION_CACHE=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port
PORT=8080

# Server host
HOST=0.0.0.0

# Logging level: INFO, DEBUG, WARNING
LOG_LEVEL=INFO

# Debug mode (auto-reload on file changes)
DEBUG=false

# =============================================================================
# STAGE 2+ (PostgreSQL + Redis for persistence and auth)
# =============================================================================
DATABASE_URL=postgresql://punter:punter123@localhost:5432/trader
REDIS_URL=redis://localhost:6379

# JWT Secret for auth tokens (change in production)
JWT_SECRET_KEY=kraken-trader-dev-secret-key-2024
